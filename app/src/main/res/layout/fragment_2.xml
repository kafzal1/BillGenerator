<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Name to Add"
        android:id="@+id/textView"
        android:textSize="20sp"
        android:textColor="#010101"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/addButton"
        android:onClick="addRecord"
        android:clickable="true"
        android:layout_below="@+id/enterName"
        android:layout_alignParentStart="true" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/enterName"
        android:ellipsize="start"
        android:gravity="center"
        android:background="@drawable/edit"
        android:hint="e.g. Sherlock Holmes"
        android:breakStrategy="high_quality"

        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="You Can add or delete the names of people to the database by inserting their names in the following fields respectively: "
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textColor="#010101"
        android:paddingTop="22dp"
        android:paddingBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter name to Delete"
        android:id="@+id/textView3"
        android:textSize="20sp"
        android:textColor="#010101"
        android:layout_below="@+id/addButton"
        android:layout_alignParentStart="true"
        android:paddingTop="30dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/deleteName"
        android:ellipsize="start"
        android:gravity="center"
        android:background="@drawable/edit"
        android:hint="e.g. Doctor Who"
        android:breakStrategy="high_quality"

        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DELETE"
        android:id="@+id/deleteButton"
        android:onClick="addRecord"
        android:clickable="false"
        android:layout_below="@+id/deleteName"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:src="@drawable/redworld"
        android:paddingTop="25dp"/>



</RelativeLayout>
