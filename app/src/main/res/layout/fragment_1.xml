<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bill Generator "
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:textColor="#010101"
        android:paddingTop="22dp"
        android:paddingBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This app is to keep a record of the amount spent that was shared within multiple individuals, e.g. collective resturant bill"
        android:id="@+id/textView"
        android:textSize="20sp"
        android:textColor="#010101"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingTop="20dp"
        android:layout_below="@+id/textView2"
        android:gravity="center"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You can enter the name of the people among which the bill will be shared in the 'Add People' and enter the amount in the 'Add Amount' "
        android:id="@+id/textView3"
        android:textSize="20sp"
        android:textColor="#010101"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:paddingTop="30dp"
        android:gravity="center"/>

   <ImageView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/textView3"
       android:src="@drawable/pages"
       android:paddingTop="20dp"/>

</RelativeLayout>
